rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow create: if isSignedIn();
      allow update, delete: if isOwnerOf(userId);
      allow read: if isOwnerOf(userId);
    }

    match /ids/{userId} {
      allow create: if isSignedIn();
      allow update, delete: if isOwnerOf(userId);
      allow read: if isOwnerOf(userId);
    }

    match /skills/{userId} {
      allow create: if isSignedIn();
      allow update, delete: if isOwnerOf(userId);
      allow read: if isOwnerOf(userId);
    }

    match /interests/{userId} {
      allow create: if isSignedIn();
      allow update, delete: if isOwnerOf(userId);
      allow read: if isOwnerOf(userId);
    }

    match /projects/{projectId} {
      allow create: if isSignedIn() && isValidProject();
      allow update, delete: if currentUser().uid == existingData().owner;
      allow read: if isValidUser();

      function isValidProject() {
        return
          incomingData().code != null &&
          incomingData().password != null &&
          incomingData().owner != null;
      }

      function isValidUser() {
        return
          existingData().owner == currentUser().uid ||
          existingData().owner in existingData().members
      }
    }

    function currentUser() {
      return request.auth;
    }
    function isSignedIn() {
      return currentUser() != null;
    }
    function isOwnerOf(userId) {
      return currentUser().uid == userId;
    }

    function existingData() {
      return resource.data;
    }
    function incomingData() {
      return request.resource.data;
    }
  }
}